<?xml version="1.0" encoding="UTF-8"?>
<ValidationRule xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>Date_Must_Be_in_the_Current_Year</fullName>
    <active>true</active>
    <errorConditionFormula>YEAR( My_Date__c ) &lt;&gt;  YEAR( TODAY() )</errorConditionFormula>
    <errorDisplayField>My_Date__c</errorDisplayField>
    <errorMessage>Date must be in the current year.</errorMessage>
</ValidationRule>
